#-*- ruby -*-   

require 'rake/clean'

TARGET = 'sample5'

task :default => [TARGET]

CLEAN.include("*.o")
CLOBBER.include(TARGET)

LDFLAGS  = '-L/usr/local/lib'
LIBS     = '-lgtest -lgtest_main'
CXXFLAGS = ''
SRC      = FileList['*.cpp']
OBJ      = SRC.ext('o')

rule '.o' => '.cpp' do |t|
  sh "g++ -O2 -c -o #{t.name} #{t.source} #{CXXFLAGS}"
end

file TARGET => OBJ do
  sh "g++ -o #{TARGET} #{OBJ} #{LDFLAGS} #{LIBS}"
end
                
task :run => [TARGET] do
  sh "./#{TARGET}"
end

file 'sample1.o' => ['sample1.cpp']
file 'sample5_unittest.o' => ['sample5_unittest.cpp']
