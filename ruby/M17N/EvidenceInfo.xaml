<Border BorderThickness='%d' BorderBrush='%s' Background='%s' Margin='5' Padding='3'>
	<StackPanel Margin='5,0,0,0' Orientation='Vertical' TextBlock.FontSize='11'>
		<TextBlock FontWeight='Bold' FontSize='14' Text='%s' Name='EvidenceName'/>
		<Grid Margin='10,6,10,0'>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width='90'/>
				<ColumnDefinition Width='*'/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column='0' FontWeight='Bold' Foreground='%s' Text='이미징 모델'/>
			<TextBlock Grid.Column='1' TextWrapping='Wrap' Foreground='%s' Text='%s/%s %s' Name='EvidenceMaker'/>
		</Grid>
		<Grid Margin='10,2,10,0'>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width='90'/>
				<ColumnDefinition Width='*'/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column='0' FontWeight='Bold' Foreground='#4776AC' Text='덤프 종류'/>
			<TextBlock Grid.Column='1'  TextWrapping='Wrap' Text='%s' Name='DumpType'/>
		</Grid>
		<Grid Margin='10,2,10,0'>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width='90'/>
				<ColumnDefinition Width='*'/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column='0' FontWeight='Bold' Foreground='#4776AC' Text='이미징 일시'/>
			<TextBlock Grid.Column='1'  TextWrapping='Wrap' Text='%s' Name='ImagingTime'/>
		</Grid>
		<Grid Margin='10,2,10,0'>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width='90'/>
				<ColumnDefinition Width='*'/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column='0' FontWeight='Bold' Foreground='#4776AC' Text='%s'/>
			<TextBlock Grid.Column='1'  TextWrapping='Wrap' Text='%s'/>
		</Grid>
		<Grid Margin='10,2,10,0'>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width='90'/>
				<ColumnDefinition Width='*'/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column='0' FontWeight='Bold' Foreground='#4776AC' Text='파일 경로'/>
			<TextBlock Grid.Column='1'  TextWrapping='Wrap' Text='%s' Name='DumpPath'/>
		</Grid>
		<Grid Margin='10,2,10,2'>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width='90'/>
				<ColumnDefinition Width='*'/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column='0' FontWeight='Bold' Foreground='#4776AC' Text='파일 크기'/>
			<TextBlock Grid.Column='1'  TextWrapping='Wrap' Text='%s' Name='DumpSize'/>
		</Grid>
	</StackPanel>
</Border>