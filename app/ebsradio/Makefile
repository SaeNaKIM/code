###############################################################################
#
# Requires gnu make
#
# $Id: Makefile 6 2010-07-07 04:31:17Z orchistro $
#
###############################################################################

.PHONY: clean tags

CC        = gcc
LD        = gcc
CFLAGS   += -Wall -g #-O2
LDFLAGS  += -lpthread

###############################################################################
# Source files needed for each target
###############################################################################

EBS_EXEC_NAME     = ebs
EBS_SRCS          = ebs.c
EBS_OBJS          = $(patsubst %.c,%.o,$(EBS_SRCS))


###############################################################################
# Default target
###############################################################################

all: $(EBS_EXEC_NAME) 


###############################################################################
# ebs executable
###############################################################################

$(EBS_EXEC_NAME) : $(EBS_OBJS)
	$(LD) $(LDFLAGS) -o $@ $^

$(EBS_OBJS) : %.o : %.c 
	$(CC) $(CFLAGS) -o $@ -c $<


###############################################################################
# Dependency checking
###############################################################################

%.d : %.c
	@$(CC) -MM $< > $@

# Include dependency file to have gcc recompile necessary sources
-include $(patsubst %.c,%.d,$(wildcard *.c))



###############################################################################
# Miscellaneous targets
###############################################################################

clean:
	rm -f *.o *.d core* $(EBS_EXEC_NAME)

tags:
	ctags -R .

